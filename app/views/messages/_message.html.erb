
    <div class="post">
      <div class="post_user">
        <div class="user_name"><%=message.user.name%></div>
        <div class="post_date"><%=l message.created_at%></div>
      </div>
      <div class="post_content">
        <%=message.content%>
      </div>
      <%= image_tag message.image.variant(resize: '500x500'), class: 'post_image' if message.image.attached?%>
    </div>